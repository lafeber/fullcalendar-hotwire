<div id="<%= dom_id event %>">
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Start:</strong>
    <%= event.starts_at %>
  </p>

  <p>
    <strong>End:</strong>
    <%= event.ends_at %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= event.color %>
  </p>

  <p>
    <strong>All day:</strong>
    <%= event.all_day %>
  </p>

</div>
